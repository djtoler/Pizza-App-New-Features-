<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="p-3 mb-2 bg-dark text-white">
    <h1 class="text-center">Your Pizza</h1>
    <div class="p-3 mb-2 bg-danger text-white" >
        <p class="pizzaSize">Size: {{pizzaSize}}</p>
        <p class="pizzaToppings">Number of Toppings: {{toppingsCount}}</p>
        <p class="pizzaToppings">Toppings: </p>
            <ul class="text-light bg-dark" >
                {{#each pizzaToppings}}
                <li> {{this}}</li>
                {{/each}}
            </ul>
    </div>
    <p class="glutenChoice">Gluten Free Crust?: {{glutenChoice}}</p>
    <p class="specialInstructions">Special Instructions: {{specialInstructions}} </p>
    <p class="p-3 mb-2 bg-danger text-white">Price: ${{pizzaPirce}} </p>
</div>

<div class="alert alert-success d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </symbol>
    </svg>
    <div>
        {{freeDelivery}}
    </div>
</div>

<div>
    <div class="d-flex flex-row">
        <div class="p-2"><a href="http://localhost:4444/byopizza">Build Another Pizza</a></div>
        <div>|</div>
        <div class="p-2"><a href="http://localhost:4444/">Back To Home Page</a></div>
    </div>
</div>




